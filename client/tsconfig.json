{
    "compilerOptions": {
        "baseUrl": "./src",
        "rootDirs": [
            "./src"
        ],
        "sourceMap": true,
        "strict": true,
        "allowJs": true,
        "noImplicitReturns": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./dist"
    ]
}

